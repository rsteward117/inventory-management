extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='brand_name') Brand Name:
      input#brand_name.form-control(type='text', placeholder='taylor' name='brand_name' required value=(undefined===author ? '' : brand.brand_name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg