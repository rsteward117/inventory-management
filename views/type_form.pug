extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') type:
      input#name.form-control(type='text', placeholder='bass' name='name' required value=(undefined===type ? '' : type.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg